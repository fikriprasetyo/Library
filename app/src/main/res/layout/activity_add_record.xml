<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="16dp"
    tools:context=".AddRecordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Book"
        android:textColor="@color/blackColor"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:id="@+id/displayTxt" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/personImage"
        android:background="@drawable/icon"
        app:srcCompat="@drawable/add_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="2dp"
        android:layout_below="@id/displayTxt"
        />

    <EditText
        android:id="@+id/personName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personImage"
        android:layout_marginTop="17dp"
        android:background="@drawable/background"
        android:hint="Nama"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personAge"
        android:inputType="number"
        android:layout_below="@id/personName"
        android:background="@drawable/background"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:hint="Tahun Terbit"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personPhone"
        android:inputType="number"
        android:layout_below="@id/personAge"
        android:background="@drawable/background"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:hint="Jumlah Halaman"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/personDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personPhone"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:hint="Deskripsi"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/addInfoBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/personDes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/detail"
        android:text="Submit"
        android:textColor="@color/whiteColor"
        android:textSize="18dp" />

</RelativeLayout>